{
    "manifest_version": 2,
    "name": "Ruliweb Comment Blocker",
    "version": "0.1",
    "description": "루리웹 댓글 차단기",
    "icons": {
        "48": "icon.png",
        "96": "icon@2x.png"
    },
    "author": "Kim, Sung-Jun",
    "developer": {
        "name": "Kim, Sung-Jun",
        "url": "http://clauzewitz.com"
    },
    "content_scripts": [
        {
            "matches": ["*://bbs.ruliweb.com/*"],
            "js": ["ruliweb_comment_blocker.js"]
        }
    ],
    "options_ui": {
        "page": "options.html"
    },
    "permissions": ["storage"]
}
